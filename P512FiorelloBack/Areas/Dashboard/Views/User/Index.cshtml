@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}

      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">User List</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Username
                          </th>
                          <th>
                             Fullname
                          </th>
                          <th>
                             Roles
                          </th>
                          <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>

                       @foreach (var user in Model)
                      {
                           <tr class="table-primary">
                          <td>
                            @user.Username
                          </td>
                          <td>
                            @user.Fullname
                          </td>
                          <td>
                              @user.Roles
                          </td>
                          <td>
                          <a class="btn btn-primary" asp-controller="User" asp-action="GetRoles" asp-route-id="@user.Id">Manage Roles</a>
                          <a class="btn btn-warning" asp-controller="User" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>
                          @*@if(user.IsActive != true)
                          {
                          <a class="btn btn-danger" asp-action="Block" asp-route-id="@user.Id">Block</a>
                          }
                          else{
                           <a class="btn btn-danger" asp-action="UnBlock" asp-route-id="@user.Id">Unblock</a>
                          }*@
                          <a class="btn btn-danger" asp-action="Block" asp-route-id="@user.Id">Block</a>

                          </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


