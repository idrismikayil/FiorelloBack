@model Layout
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create new Slider</h4>
                        <form class="forms-sample" method="post" asp-controller="Layout" asp-action="Create" enctype="multipart/form-data">
                           
                            <div class="form-group">
                                <label for="exampleInputUsername1">Image</label>
                                <input accept="image/*" asp-for="ImageFile" class="form-control" placeholder="Image">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div> 
                             <div class="form-group">
                                <label for="exampleInputUsername1">Instagram URL</label>
                                <input asp-for="Intagram" class="form-control" placeholder="Instagram">
                                <span asp-validation-for="Intagram" class="text-danger"></span>
                            </div>
                             <div class="form-group">
                                <label for="exampleInputUsername1">Facebook URL</label>
                                <input asp-for="Facebook" class="form-control" placeholder="Facebook">
                                <span asp-validation-for="Facebook" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary me-2"> Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

