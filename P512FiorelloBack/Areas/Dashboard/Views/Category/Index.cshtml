@model List<Category>
@{
    ViewData["Title"] = "Index";
}
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Table with contextual classes</h4>
                  <p class="card-description">
                    Add class <code>.table-{color}</code>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Id
                          </th>
                          <th>
                             Name
                          </th>
                          <th>
                            Actions
                          </th>
                        </tr>
                      </thead>
                      <tbody>

                       @foreach (var category in Model)
                      {
                           <tr class="table-primary">
                          <td>
                            @category.Id
                          </td>
                          <td>
                            @category.Name
                          </td>
                          <td>
                          <a class="btn btn-primary" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                          <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Update</a>
                          <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                          </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

